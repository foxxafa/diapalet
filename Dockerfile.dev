# Development Dockerfile (Hot reload destekli)
FROM php:8.1-apache

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    libzip-dev \
    zip \
    unzip \
    wget \
    && docker-php-ext-install pdo_mysql mbstring exif pcntl bcmath gd zip

# Enable Apache modules
RUN a2enmod rewrite headers

# Install Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Set working directory
WORKDIR /var/www/html

# Configure Apache for development
RUN echo "<VirtualHost *:80>\n\
    DocumentRoot /var/www/html/web\n\
    <Directory /var/www/html/web>\n\
        AllowOverride All\n\
        Require all granted\n\
        DirectoryIndex index.php\n\
    </Directory>\n\
    <Directory /var/www/html>\n\
        AllowOverride All\n\
        Require all granted\n\
    </Directory>\n\
    ErrorLog /var/log/apache2/error.log\n\
    CustomLog /var/log/apache2/access.log combined\n\
    LogLevel warn\n\
</VirtualHost>" > /etc/apache2/sites-available/000-default.conf

# Set PHP development settings
RUN echo "display_errors = On\n\
error_reporting = E_ALL\n\
log_errors = On\n\
error_log = /var/log/apache2/php_errors.log\n\
max_execution_time = 300\n\
memory_limit = 512M" > /usr/local/etc/php/conf.d/dev.ini

# Create startup script with dynamic port
RUN echo '#!/bin/bash\n\
export PORT=${PORT:-80}\n\
sed -i "s/:80/:$PORT/g" /etc/apache2/sites-available/000-default.conf\n\
sed -i "s/Listen 80/Listen $PORT/g" /etc/apache2/ports.conf\n\
exec apache2ctl -D FOREGROUND' > /start.sh && chmod +x /start.sh

# Create logs directory
RUN mkdir -p /var/log/apache2

# Expose port 80
EXPOSE 80

# Start Apache
CMD ["/start.sh"] 