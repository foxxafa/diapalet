<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <asp>
            <limits responseBufferLimit="10485760" /> <!-- 10 MB -->
        </asp>
        <defaultDocument>
            <files>
                <add value="index.php" />
            </files>
        </defaultDocument>
        <security>
            <requestFiltering>
                <!-- 50MB request limit for database uploads -->
                <requestLimits maxAllowedContentLength="52428800" />
            </requestFiltering>
        </security>
    </system.webServer>
    <system.web>
        <!-- ASP.NET iÃ§in 50MB limit -->
        <httpRuntime maxRequestLength="51200" executionTimeout="300" />
    </system.web>
</configuration>
