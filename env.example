# =================================
# YII2 FRAMEWORK ENVIRONMENT VARIABLES
# =================================

# Application Environment
YII_DEBUG=false
YII_ENV=prod

# Security
COOKIE_VALIDATION_KEY=your-random-32-character-secret-key-here

# =================================
# DATABASE CONFIGURATION (MySQL)
# =================================

# Railway automatically provides these variables when you add MySQL service
DB_HOST=mysql.railway.internal
DB_NAME=railway
DB_USER=root
DB_PASSWORD=your-database-password

# Alternative database configuration
# If using external MySQL service:
# DB_HOST=your-mysql-host.com
# DB_PORT=3306

# =================================
# RAILWAY DEPLOYMENT VARIABLES
# =================================

# Railway automatically sets these:
# PORT=8080
# RAILWAY_ENVIRONMENT=production

# =================================
# APPLICATION SPECIFIC VARIABLES
# =================================

# API Configuration
API_BASE_URL=https://your-app.railway.app
API_TIMEOUT=30

# External API Credentials (from your Dia.php)
DIA_API_URL=https://aytacfoods.ws.dia.com.tr/api/v3/sis/json
DIA_USERNAME=Ws-03
DIA_PASSWORD=Ws123456.
DIA_API_KEY=dbbd8cb8-846f-4379-8d77-505e845db4a2

# =================================
# OPTIONAL CONFIGURATIONS
# =================================

# Mail Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls

# Redis Cache (if using Redis)
REDIS_HOST=redis.railway.internal
REDIS_PORT=6379
REDIS_PASSWORD=

# File Upload Configuration
MAX_UPLOAD_SIZE=10M
UPLOAD_PATH=/var/www/html/web/uploads

# Logging Level
LOG_LEVEL=error

# Session Configuration
SESSION_TIMEOUT=3600

# =================================
# PRODUCTION SECURITY SETTINGS
# =================================

# Force HTTPS in production
FORCE_HTTPS=true

# CORS Settings
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600 